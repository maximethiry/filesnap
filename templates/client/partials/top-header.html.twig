<header {{ stimulus_controller('menu') }} class="z-50 h-18 fixed top-0 left-0 right-0 bg-stone-800">
    <div class="flex flex-col my-2 mx-2 bg-stone-50 xl:flex-row">
        <div class="flex items-center justify-between pb-1 pt-0.5 pr-2">
            <a href="{{ path('client_user_gallery') }}">
                <h1 class="title select-none text-5xl text-stone-800 font-black pl-1">
                    filesnap
                </h1>
            </a>
            <button {{ stimulus_action('menu', 'toggle', 'click') }} class="xl:hidden">
                <i class="button icon-button fi fi-br-menu-burger"></i>
            </button>
        </div>
        <div {{ stimulus_target('menu', 'menu') }} class="menu {{ open_menu ? 'open' }} xl:h-auto xl:flex-grow">
            <div class="p-2 space-y-2 xl:space-y-0 xl:flex xl:flex-row-reverse">
                <div class="flex space-x-2">
                    {% block navigation %}{% endblock %}
                </div>
                <div class="flex flex-wrap justify-center gap-2 sm:justify-start xl:flex-grow xl:justify-start 2xl:justify-center">
                    {% block actions %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
</header>