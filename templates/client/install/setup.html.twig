{% extends 'base.html.twig' %}
{% set disable_turbo_drive = true %}

{% block page_title %}install{% endblock %}

{% block body %}
    {% include 'client/partials/big-header.html.twig' %}

    <div class="flex justify-center py-12 md:py-16">
        {{ form_start(form, {'attr': {'class': 'flex flex-col items-center'}}) }}

        <p class="mb-10 text-center md:text-left md:w-1/2">
            You are about to set up filesnap.
            <br>
            Verify that the database connection string in the environment variables is correct.
        </p>

        <p class="mb-10 text-center md:text-left md:w-1/2">
            Please provide an email and password.
            <br>
            The account created with these identifiers will be an administrator account with which you can log in once the database is ready.
        </p>

        <div class="space-y-6">
            <div class="input-group">
                {{ form_label(form.adminEmail, 'Email') }}
                {{ form_widget(form.adminEmail) }}
            </div>

            <div class="input-group">
                {{ form_label(form.adminPlainPassword, 'Password') }}
                {{ form_widget(form.adminPlainPassword) }}
                <div class="text-red-600">
                    {{ form_errors(form.adminPlainPassword) }}
                </div>
            </div>
        </div>

        <div class="error mt-5">
            {% if error %}
                <p class="text-center text-red-600">{{ error }}</p>
            {% endif %}
        </div>

        <div class="flex justify-center mt-5">
            <button class="button py-2 px-4 bg-sky-200 select-none space-x-2" type="submit">
                <span>Setup filesnap</span>
                <i class="flex text-stone-800 fi fi-br-gears"></i>
            </button>
        </div>

        {{ form_end(form) }}
    </div>

    {% include 'client/partials/footer.html.twig' %}
{% endblock %}