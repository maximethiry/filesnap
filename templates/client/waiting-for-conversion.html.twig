{% extends 'base.html.twig' %}

{% block page_title %}Waiting for conversion{% endblock %}

{% block body %}
    {% include 'client/partials/big-header.html.twig' %}

    <div class="waiting-for-conversion flex flex-col items-center text-stone-800 font-bold mt-16 px-4">
        <p class="text-2xl md:text-3xl text-center">
            Waiting for the format conversion
            <br>
            Your {{ format.value }} file will be ready soon !
        </p>
        <div class="flex justify-center mt-16">
            <a href="{{ path('client_snap_file_original', {id: snap.id.toBase58()}) }}" class="button bg-sky-200 py-1 px-3">
                See original file
            </a>
        </div>
    </div>
{% endblock %}
