{% extends 'base.html.twig' %}

{% block title %}Komorebi {{ status_text }}{% endblock %}

{% block body %}
    {% include 'client/partials/big-header.html.twig' %}

    <div class="flex flex-col items-center space-y-4 text-stone-800 font-bold mt-16 px-4">
        <p class="text-6xl md:text-8xl">{{ status_code }}</p>
        <p class="text-2xl md:text-3xl text-center">{{ status_text }}</p>
    </div>

    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div class="flex justify-center mt-16">
            <a href="{{ path('client_user_gallery') }}" class="button bg-sky-200 py-1 px-3">Go back to your gallery</a>
        </div>
    {% else %}
        <div class="flex justify-center mt-16">
            <a href="{{ path('client_login') }}" class="button bg-sky-200 py-1 px-3">Go back to login page</a>
        </div>
    {% endif %}
{% endblock %}